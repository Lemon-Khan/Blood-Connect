<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/background11">
    
       <TextView android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:fontFamily="sans-serif-medium" 
                android:textSize="25sp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:text="Step 2: Completion"
                android:background="@drawable/login_back" />
    
    <TableLayout android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="14dp"
    android:layout_marginRight="14dp"
    >
    
        <TableRow>
             <TextView
		        android:id="@+id/textView1"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Govt. identification number"
		        android:textColor="#FFFFFF"
		        android:layout_marginLeft="5dp"
		        
		        android:textAppearance="?android:attr/textAppearanceSmall" /> 
            
            
        </TableRow>
        <TableRow>
            
         <EditText android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginBottom="3dp"
                android:background="@drawable/login_edittext"
                android:id="@+id/patient_id_show"/>   
        </TableRow>
        
        
        <TableRow>
            <TextView
		        android:id="@+id/textView2"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Blood group"
		        android:textColor="#FFFFFF"
		        android:layout_marginLeft="5dp"
		        
		        android:textAppearance="?android:attr/textAppearanceSmall" />
            
            
        </TableRow>
        <TableRow>
        <EditText android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginBottom="3dp"
                android:background="@drawable/login_edittext"
                android:id="@+id/patient_blood"/> 
        </TableRow>
        <TableRow>
           <TextView
		        android:id="@+id/textView3"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="No. of bags"
		        android:textColor="#FFFFFF"
		        android:layout_marginLeft="5dp"
		        
		        android:textAppearance="?android:attr/textAppearanceSmall" />
            
        </TableRow>
        <TableRow>
        <Spinner android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:id="@+id/no_bags_taken"/>
        </TableRow>
        <TableRow>
            <TextView
		        android:id="@+id/textView4"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="Date"
		        android:textColor="#FFFFFF"
		        android:layout_marginLeft="5dp"
		        
		        android:textAppearance="?android:attr/textAppearanceSmall" />
            
            
        </TableRow>
        <TableRow>
        <EditText android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_marginBottom="3dp"
                android:background="@drawable/login_edittext"
                android:id="@+id/date"/> 
        </TableRow>
    </TableLayout>
    
        <Button
        android:id="@+id/proceed"
        android:layout_width="150dp"
        android:textSize="15sp"
        android:layout_height="40dp"
        android:layout_marginTop="14dp"
        android:fontFamily="sans-serif-medium" 
        android:background="@drawable/login_button"
        android:textColor="#FFFFFF"
        android:text="Submit"
        android:textStyle="bold"
        android:layout_gravity="center" 
        />
        <TextView android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/Message"
                android:layout_gravity="center"
                
                />

</LinearLayout>
